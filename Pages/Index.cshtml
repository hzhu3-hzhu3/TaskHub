@page
@model TaskHub.Pages.Tasks.IndexModel
@{
}

<h1>Task List</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Is Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.TaskList)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.IsCompleted</td>
            </tr>
        }
    </tbody>
</table>
